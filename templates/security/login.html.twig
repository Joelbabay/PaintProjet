{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('app') }}
{% endblock %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="s-content content">
		<main class="row s-styles">
			<section id="styles" class="column large-full">
				<div id="top" class="column large-8 tab-full" style="margin:0 auto">
					<form method="post" id="contactForm" name="contactForm" class="row">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						{% if app.user %}
							<div class="mb-3">
								You are logged in as
								{{ app.user.username }},
								<a href="{{ path('app_logout') }}">Logout</a>
							</div>
						{% endif %}

						<h1 style="font-size: 3.6rem;">Ouvrir une session</h1>
						<label for="inputEmail">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control full-width mb-5" autocomplete="email" required autofocus>
						<label for="inputPassword">Password</label>
						<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

						<input
						type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																																																																																																																								See https://symfony.com/doc/current/security/remember_me.html
																																																																																																																																															<div class="checkbox mb-3"> <label>
																																																																																																																																												<input type="checkbox" name="_remember_me"> Remember me
																																																																																																																																													</label>
																																																																																																																																												</div>#}

						<button class="btn--primary full-width mt-5" type="submit">
							Sign in
						</button>
					</form>
				</div>
			</section>
		</main>
	</div>
{% endblock %}
