{% extends 'base.html.twig' %}

{% block title %}Typerite
{% endblock %}

{% block body %}
	<!-- preloader -->
	<div id="preloader">
		<div id="loader" class="dots-fade">
			<div></div>
			<div></div>
			<div></div>
		</div>
	</div>

	<div id="top" class="s-wrap site-wrapper">

		<div class="s-content">
			<div class="masonry-wrap">

				<div class="masonry">

					<div class="grid-sizer"></div>
					{% for paint in paints %}
						<article class="masonry__brick entry format-standard animate-this">
							<div class="entry__thumb">
								<a href="single-standard.html" class="entry__thumb-link">
									<img src="/img/thumbs/masonry/woodcraft-600.jpg" srcset="/img/thumbs/masonry/woodcraft-600.jpg 1x, /img/thumbs/masonry/woodcraft-1200.jpg 2x" alt="">
								</a>
							</div>

							<div class="entry__text">
								<div class="entry__header">

									<h2 class="entry__title">
										<a href="single-standard.html">{{ paint.name }}</a>
									</h2>
									<div class="entry__meta">
										<span class="entry__meta-cat">
											{% for categorie in paint.categorie %}
												<a href="category.html">{{categorie.name}}</a>
											{% endfor %}
										</span>
										<span class="entry__meta-date">
											<a href="single-standard.html">{{paint.CreatedAt|date('d/m/Y')}}</a>
										</span>
									</div>

								</div>
								<div class="entry__excerpt">
									<p>
										{{ paint.description|u.truncate(100, '...', false) }}
									</p>
								</div>
							</div>

						</article>
						<!-- end article -->
					{% endfor %}

				</div>
				<!-- end masonry -->

			</div>
			<!-- end masonry-wrap -->

			<div class="row">
				<div class="column large-full">
					<nav class="pgn">
						<ul>
							<li>
								<a class="pgn__prev" href="#0">Prev</a>
							</li>
							<li>
								<a class="pgn__num" href="#0">1</a>
							</li>
							<li>
								<span class="pgn__num current">2</span>
							</li>
							<li>
								<a class="pgn__num" href="#0">3</a>
							</li>
							<li>
								<a class="pgn__num" href="#0">4</a>
							</li>
							<li>
								<a class="pgn__num" href="#0">5</a>
							</li>
							<li>
								<span class="pgn__num dots">â€¦</span>
							</li>
							<li>
								<a class="pgn__num" href="#0">8</a>
							</li>
							<li>
								<a class="pgn__next" href="#0">Next</a>
							</li>
						</ul>
					</nav>
				</div>
			</div>

		</div>
		<!-- end s-content -->

	</div>
	<!-- end s-wrap -->


{% endblock %}
